{
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "requireConfigFile": "false",
    "babelOptions": {
      "configFile": "./.babelrc"
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "mdx/code-blocks": true,
    "mdx/language-mapper": {}
  },
  "env": {
    "browser": true,
    "node": true,
    "es8": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:mdx/recommended"
  ],
  "rules": {
    "react/prop-types": 0
  }
}