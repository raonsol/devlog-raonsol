{
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "sourceType": "module",
    "ecmaVersion": 2020,
    "allowImportExportEverywhere": true,
    "requireConfigFile": "false",
    "babelOptions": {
      // "configFile": "./.babelrc",
      "presets": ["@babel/preset-env"]
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "mdx/code-blocks": true,
    "mdx/language-mapper": {}
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:mdx/recommended"
  ],
  "rules": {
    "react/prop-types": 0
  }
}
